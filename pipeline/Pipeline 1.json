								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"source": {
									"type": "SqlServerSource",
									"sqlReaderQuery": {
										"value": "select * from [@{item().schema_name}].[@{item().table_name}] \nwhere @{item().Watermark_column} > '@{activity('LookupOldWaterMarkActivity').output.firstRow.watermark}' and @{item().Watermark_column} <= '@{activity('LookupNewWaterMarkActivity').output.firstRow.NewWatermarkvalue}'",
